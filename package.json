{
  "name": "simple-obs-root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Brendonovich/simple-obs"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "website"
    ]
  },
  "scripts": {
    "test": "beemo jest",
    "coverage": "pnpm test -- --coverage",
    "build": "packemon build --addEngines",
    "type": "beemo typescript --build",
    "build-all": "pnpm build && pnpm type",
    "clean": "packemon clean",
    "set-package-versions": "node scripts/setPackageVersions.js"
  },
  "devDependencies": {
    "@beemo/cli": "^2.0.3",
    "@beemo/core": "^2.1.1",
    "@beemo/dev": "^1.7.4",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@beemo/driver-babel": "^2.0.5",
    "@beemo/driver-jest": "^2.0.4",
    "jest": "^27.4.5",
    "packemon": "^1.10.0",
    "ts-jest": "^27.1.2"
  }
}
